{
  "name": "ud-react-ui",
  "version": "1.0.0",
  "description": "Union Digital's mini app react components",
  "source": "src/index.js",
  "main": "dist/main.js",
  "module": "dist/module.js",
  "modules": true,
  "scripts": {
    "watch:js": "parcel watch --no-hmr --no-source-maps",
    "watch:css": "npx tailwindcss -i ./src/index.css -o ./dist/style.css --watch",
    "dev": "concurrently \"npm run watch:css\" \"npm run watch:js\"",
    "build": "concurrently \"parcel build --no-source-maps\" \"npx tailwindcss -i ./src/index.css -o ./dist/style.css --minify\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.4.0",
    "parcel": "^2.0.1",
    "postcss": "^8.4.5",
    "postcss-custom-properties": "^12.0.1",
    "postcss-import": "^14.0.2",
    "postcss-url": "^10.1.3",
    "tailwindcss": "^3.0.7"
  },
  "dependencies": {
    "@parcel/transformer-react-refresh-wrap": "^2.0.1",
    "classnames": "^2.3.1",
    "concurrently": "^6.5.1",
    "prop-types": "^15.7.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  }
}
